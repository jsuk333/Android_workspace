<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<Button
    android:id="@+id/bt_cneter"
    android:text="기준점"
    android:layout_centerInParent="true"
    android:width="150dp"
    android:height="150dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <Button
        android:layout_alignLeft="@id/bt_cneter"
        android:layout_above="@id/bt_cneter"
        android:text="1번"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_above="@id/bt_cneter"
        android:layout_toRightOf="@id/bt_cneter"
        android:text="2번"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="3번"
        android:layout_below="@id/bt_cneter"
        android:layout_alignRight="@id/bt_cneter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_toLeftOf="@id/bt_cneter"
        android:layout_alignBottom="@id/bt_cneter"
        android:text="4번"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_toLeftOf="@id/bt_cneter"
        android:layout_alignBaseline="@id/bt_cneter"
        android:text="5번"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_toLeftOf="@id/bt_cneter"
        android:layout_alignTop="@id/bt_cneter"
        android:text="6번"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>